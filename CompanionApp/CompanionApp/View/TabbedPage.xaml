<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:CompanionApp.View"
            x:Class="CompanionApp.MainPage"
            BarBackgroundColor="#20421d"
            SelectedTabColor="#56a345"
            BarTextColor="White">
    <local:LoginPage/>
    <NavigationPage Title="Register"
                    IconImageSource="schedule.png">
        <x:Arguments>
            <local:RegisterPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Dashboard"
                    IconImageSource="schedule.png">
        <x:Arguments>
            <local:Dashboard />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Caseworker"
                    IconImageSource="schedule.png">
        <x:Arguments>
            <local:CaseworkerContact />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Resources"
                    IconImageSource="schedule.png">
        <x:Arguments>
            <local:AdditionalResources />
        </x:Arguments>
    </NavigationPage>
    
</TabbedPage>